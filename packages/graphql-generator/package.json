{
  "name": "@aws-amplify/graphql-generator",
  "version": "0.0.1",
  "description": "GraphQL API code generator",
  "repository": {
    "type": "git",
    "url": "https://github.com/aws-amplify/amplify-codegen.git",
    "directory": "packages/graphql-generator"
  },
  "author": "Amazon Web Services",
  "license": "Apache-2.0",
  "main": "src/index.js",
  "types": "lib/index.d.ts",
  "keywords": [
    "graphql",
    "appsync",
    "aws"
  ],
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test-watch": "jest --watch",
    "extract-api": "ts-node ../../scripts/extract-api.ts"
  },
  "dependencies": {
    "@aws-amplify/appsync-modelgen-plugin": "2.5.3",
    "@aws-amplify/graphql-docs-generator": "4.0.5",
    "@aws-amplify/graphql-types-generator": "3.2.0",
    "@graphql-codegen/core": "2.6.6",
    "@graphql-tools/apollo-engine-loader": "^8.0.0",
    "graphql": "^15.5.0"
  },
  "typescript": {
    "definition": "lib/index.d.ts"
  },
  "publishConfig": {
    "access": "public"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80
      }
    },
    "testRegex": "(src/__tests__/.*.test.ts)$",
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "moduleFileExtensions": [
      "js",
      "ts"
    ]
  }
}
