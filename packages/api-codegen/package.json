{
  "name": "@aws-amplify/api-codegen",
  "version": "0.0.1",
  "description": "API code generator",
  "repository": {
    "type": "git",
    "url": "https://github.com/aws-amplify/amplify-codegen.git",
    "directory": "packages/api-codegen"
  },
  "author": "Amazon Web Services",
  "license": "Apache-2.0",
  "main": "src/index.js",
  "keywords": [
    "graphql",
    "appsync",
    "aws"
  ],
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test-watch": "jest --watch",
    "extract-api": "ts-node ../../scripts/extract-api.ts"
  },
  "dependencies": {
    "@aws-amplify/appsync-modelgen-plugin": "2.5.1",
    "@aws-amplify/graphql-docs-generator": "4.0.3",
    "@aws-amplify/graphql-types-generator": "3.0.3",
    "@graphql-codegen/core": "2.6.6",
    "@graphql-tools/apollo-engine-loader": "^8.0.0",
    "graphql": "^15.5.0"
  },
  "jest": {
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80
      }
    },
    "testURL": "http://localhost",
    "testRegex": "((\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "js",
      "jsx",
      "node"
    ]
  }
}
